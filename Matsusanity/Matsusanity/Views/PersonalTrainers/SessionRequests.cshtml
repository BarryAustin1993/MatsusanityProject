@model IEnumerable<Matsusanity.Models.InSessionRequest>

@{
    ViewData["Title"] = "SessionRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SessionRequests</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                        <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
   
            <td>
                <a asp-action="ApproveRequest" asp-route-id="@item.Id">Approve</a> |
                <a asp-action="DenyRequest" asp-route-id="@item.Id">Deny</a>
            </td>
        </tr>
}
    </tbody>
</table>
