@model IEnumerable<Matsusanity.Models.PersonalTrainer>

@{
    ViewData["Title"] = "PickAPersonalTrainer";
}

<h1>PickAPersonalTrainer</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="AddTrainer" asp-route-id="@item.Id">Choose Me</a>
            </td>
        </tr>
}
    </tbody>
</table>
