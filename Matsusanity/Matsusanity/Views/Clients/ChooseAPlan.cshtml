@model Matsusanity.Models.Client

@{
    ViewData["Title"] = "ChooseAPlan";
}

<h1>ChooseAPlan</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseAPlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />            

            <div class="form-group">
                <label>Workout Plan:</label>
                <select id="WorkoutPlanId" asp-for="WorkoutPlanId">
                    <option value="1">Gain Muscle</option>
                    <option value="2">Lose Weight</option>
                    <option value="3">Get Fit</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
